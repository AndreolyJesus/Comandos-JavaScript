for (inicialização; condição; atualização) {
  // código a ser repetido enquanto a condição for verdadeira
}

while (condição) {
  // código a ser repetido enquanto a condição for verdadeira
}

do {
  // código a ser repetido pelo menos uma vez e enquanto a condição for verdadeira
} while (condição);


//Exemplo: While
let i = 0;
while (i < 5) {
  console.log(i);
  i++;
}
// Output: 0 1 2 3 4

//Exemplo: Do while
do {
    // código a ser repetido pelo menos uma vez e enquanto a condição for verdadeira
  } while (condição);

//---------------------------------

  let i = 0;
do {
  console.log(i);
  i++;
} while (i < 5);
// Output: 0 1 2 3 4
